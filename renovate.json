{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "platformAutomerge": true,
  "automerge": true,  // Add this global default
  "flux": {
    "managerFilePatterns": ["/flux/.+\\.yaml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/flux/.+\\.yaml$/"]
  },
  "kubernetes": {
    "managerFilePatterns": ["/flux/.+\\.yaml$/"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/flux/.+\\.yaml$/"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "description": "Auto-merge patch updates after 2 days",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "2 days"
    },
    {
      "description": "Auto-merge minor updates",
      "matchUpdateTypes": ["minor"],
      "automerge": true
    },
    {
      "description": "Auto-merge digest updates",
      "matchUpdateTypes": ["digest"],
      "automerge": true
    },
    {
      "description": "Disable major updates automerge (review manually)",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Disable major Docker updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Group Helm chart updates",
      "matchDatasources": ["helm"],
      "groupName": "Helm charts"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
