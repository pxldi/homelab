{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "recreateClosed": true,
  "ignoreTests": true,
  "flux": {
    "managerFilePatterns": ["/flux/.+\\.yaml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/flux/.+\\.yaml$/"]
  },
  "kubernetes": {
    "managerFilePatterns": ["/flux/.+\\.yaml$/"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/flux/.+\\.yaml$/"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "description": "Auto-merge patch updates directly to branch (no PRs)",
      "matchUpdateTypes": ["patch", "digest"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Minor updates create PRs but don't automerge",
      "matchUpdateTypes": ["minor"],
      "automerge": false
    },
    {
      "description": "Major updates create PRs but don't automerge",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Disable major Docker updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
