{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "platformAutomerge": true,
  "flux": {
    "managerFilePatterns": [
      "/flux/.+\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/flux/.+\\.yaml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/flux/.+\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/flux/.+\\.yaml$/"
      ],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "description": "Auto-merge patch updates after 2 days",
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "minimumReleaseAge": "2 days"
    },
    {
      "description": "Auto-merge digest updates",
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true
    },
    {
      "description": "Disable major Docker updates",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "description": "Group Helm chart updates",
      "matchDatasources": [
        "helm"
      ],
      "groupName": "Helm charts",
      "schedule": [
        "every weekend"
      ]
    },
    {
      "description": "Group Flux updates",
      "groupName": "Flux",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/fluxcd/"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
